pipeline {
    agent any
    stages {
      stage('Build') {
          steps {
              sh "gradle wrapper --gradle-version=4.10-rc-2"
              sh "gradle build"
          }
      }
      stage('Test') {
          steps {
              sh "gradle test"
          }
      }
      stage('Deploy') {
          steps {
              sh "gradle war"
              sh "gradle appRun"
          }
      }
    }
    post {
        always {
            junit "build/reports/tests/index.html"
        }
        success {
            archive "build/libs/*.war"
        }
    }
}
